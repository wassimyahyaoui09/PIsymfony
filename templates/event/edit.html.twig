{% extends 'base.html.twig' %}
{% block title %}Update Event{% endblock %}
 {% block container %}
    <div class="row">

                <!-- Basic Layout -->
                <div class="col-xxl">
                  <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                      <h5 class="mb-0">Update Event</h5>
                     
                    </div>
                    <div class="card-body">
<form method="{{ form.vars.method }}" action="{{ path('updateEvent', {'id': id}) }}" novalidate>                    {{ form_start(form) }}

                    <div class="row mb-3">
                        {{ form_label(form.date, 'Date:', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date) }} {# Affichage des erreurs de validation du champ date #}
                        </div>
                    </div>

                    <div class="row mb-3">
                        {{ form_label(form.description, 'Description:', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }} {# Affichage des erreurs de validation du champ description #}
                        </div>
                    </div>

                    <div class="row mb-3">
                        {{ form_label(form.nom, 'Nom:', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }} {# Affichage des erreurs de validation du champ nom #}
                        </div>
                    </div>

                    <div class="row mb-3">
                        {{ form_label(form.imageFile, 'Image:', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.imageFile) }} {# Affichage des erreurs de validation du champ imageFile #}
                        </div>
                    </div>

                    <div class="row mb-3">
                        {{ form_label(form.type, 'Type:', {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.type) }} {# Affichage des erreurs de validation du champ type #}
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </form>


                    </div>
                  </div>
                </div>
                     </div>

   


{% endblock %}